TARGET = dpsemu
LIBS = -lm -lpthread


CC = gcc
CFLAGS = -m32 -g -Wall -I. -I../opendps -I../scpi-parser/libscpi/inc/ -DCONFIG_DPS_MAX_CURRENT=5000 -Ddbg_printf=printf -DDPS5005 -DDPS_EMULATOR -Wmissing-braces

ifeq ($(OS),Windows_NT)  #Changes required to build on windows with MinGW
	TARGET = dpsemu.exe
	LIBS = -lm -lpthreadGC2 -lWs2_32 ../scpi-parser/libscpi/dist/libscpi.a
	CFLAGS += -DHAVE_STRUCT_TIMESPEC  -Wextra -Wmissing-prototypes -Wimplicit
endif


.PHONY: default all clean

default: $(TARGET)
all: default

vpath %.c ../opendps

SRCS = opendps.c \
	dpsemul.c \
	event.c \
	past.c \
	flash.c \
	ringbuf.c \
	pwrctl.c \
	uui.c \
	uui_number.c \
	tft.c \
	hw.c \
	dac.c \
	bootcom.c \
	crc16.c \
	uframe.c \
	protocol.c \
	protocol_handler.c \
	font-0.c \
	font-1.c \
	func_cv.c \
	misc.c \

#OBJECTS = $(patsubst ../%, %, $(patsubst %.c, %.o, $(SRCS)))
OBJECTS = $(patsubst %.c, %.o, $(SRCS))
HEADERS = $(wildcard *.h)

%.o: %.c $(HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

.PRECIOUS: $(TARGET) $(OBJECTS)

$(TARGET): $(OBJECTS)
	$(CC) $(CFLAGS) $(OBJECTS) -Wall $(LIBS) -o $@

clean:
	-rm -f *.o
	-rm -f $(TARGET)
